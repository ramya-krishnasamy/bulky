@page
@model Bulkyweb_razor.Pages.Categories.EditModel

<form method="post">
    <input asp-for="selectedCategory.Id" hidden />
    <div class="border mt-4 p-3">
        <div class="row">
            <h2 class="text-primary">
                Edit Category
            </h2>
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3 row p-1">
            <label asp-for="selectedCategory.CategoryName" class="p-0"></label>
            <input asp-for="selectedCategory.CategoryName" class="form-control" />
            <span asp-validation-for="selectedCategory.CategoryName" class="text-danger"></span>
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="selectedCategory.DisplayOrder" class="p-0">  </label>
            <input asp-for="selectedCategory.DisplayOrder" class="form-control" />
            <span asp-validation-for="selectedCategory.DisplayOrder" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Update</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="category/index" class="btn btn-outline-secondary form-control">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial Name="_ValidationScriptsPartial" />
    }
}

