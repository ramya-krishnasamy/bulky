@page
@model Bulkyweb_razor.Pages.Categories.IndexModel
@{
}

<div class="container">
    <div class="row pt-4 pb-4">
        <div class="col-6 pt-4 pb-4">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/categories/create" class="btn btn-primary">
                Create new category <i class="bi bi-plus-circle"></i>
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var catObj in Model.categories.OrderBy(x => x.DisplayOrder))
            {
                <tr>
                    <td>
                        @catObj.CategoryName
                    </td>
                    <td>
                        @catObj.DisplayOrder
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-page="/categories/edit" asp-route-id="@catObj.Id" class="btn btn-primary mx-3">
                                Edit <i class="bi bi-pencil-square"></i>
                            </a>
                            <a asp-page="/categories/delete" asp-route-id="@catObj.Id" class=" btn btn-delete mx-3">
                                Delete <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

