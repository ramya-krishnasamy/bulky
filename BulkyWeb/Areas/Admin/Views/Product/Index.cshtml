@model List<Product>

<div class="card show-header border-0 mt-4 shadow">
    <div class="card header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center ">
                <h3 class="text-white"> Product Listings </h3>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-6 text-end">

            </div>
            <div class="col-6 text-end">
                <a asp-area="Admin" asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                    Create New Product <i class="bi bi-plus-circle"></i>
                </a>
            </div>
        </div>
        <div class="pt-3">
            <table id="tblData" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th> Product Title </th>
                        <th> Author </th>
                        <th> Category </th>
                        <th> List Price </th>
                        <th> Actions </th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>


@section Scripts{
    <script src="~/js/product.js"></script>
}