@model Company

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white"> Delete Company</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="p-3">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" disabled class="form-control border-0 shadow" />
                    <label asp-for="Name" class=""></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="State" disabled class="form-control border-0 shadow" />
                    <label asp-for="State" class=""></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="City" disabled class="form-control border-0 shadow" />
                    <label asp-for="City" class=""></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="PhoneNumber" disabled class="form-control border-0 shadow" />
                    <label asp-for="PhoneNumber" class=""></label>
                </div>
                <div class="row pt-4">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-area="Admin" asp-controller="Company" asp-action="Index" class="btn btn-outline-secondary form-control">
                            Cancel
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
